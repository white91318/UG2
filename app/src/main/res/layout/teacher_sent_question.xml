<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teacher_sent_question"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    <TextView
        android:id="@+id/tv1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_x="200dp"
        android:layout_y="100dp"
        android:text="&lt;請輸入作業主題&gt;"
        android:textSize="28sp" />
    <EditText
        android:id="@+id/question_content"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_x="200dp"
        android:layout_y="145dp"
        android:maxLength="20"
        android:textSize="24sp">
    </EditText>

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="200dp"
        android:layout_y="260dp"
        android:text="&lt;選擇物件形狀&gt;"
        android:textSize="28sp" />
    <TextView
        android:id="@+id/select_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="250dp"
        android:layout_y="300dp"
        android:text="矩形"
        android:textSize="24sp"
        />
    <Button
        android:id="@+id/sent"
        android:layout_width="60dp"
        android:layout_height="75dp"
        android:layout_x="420dp"
        android:layout_y="160dp"
        android:background="@drawable/confirm_but"/>

    <TextView
        android:id="@+id/tv3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_x="200dp"
        android:layout_y="350dp"
        android:text="&lt;目前的作業清單&gt;"
        android:textSize="28sp" />
    <ListView
        android:id="@+id/homework_listview"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_x="200dp"
        android:layout_y="390dp"
        android:cacheColorHint="@android:color/transparent">
    </ListView>

</AbsoluteLayout>